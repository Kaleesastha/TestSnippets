<configuration_file
	name="hibernate.cfg.xml"
	path="classes/hbnlib"
	classname="com.adventnet.nms.tools.confchanges.DBParamsChanges"
	description="Adding Encoding and setting Unicode as true in hibernate xml"
	required="true"
	priority="0">
	<update_node
		name="Modify_entry" description="Adding Encoding and setting Unicode as true in hibernate xml">
		<property_set name="Modify_entry">
			<property name="oldEntry"
				value="jdbc:mysql://localhost/WebNmsDB?dumpQueriesOnException=true&amp;amp;jdbcCompliantTruncation=false"/>
			<property name="newEntry"
				value="jdbc:mysql://localhost/WebNmsDB?useUnicode=true&amp;amp;jdbcCompliantTruncation=false&amp;amp;dumpQueriesOnException=true&amp;amp;characterEncoding="/>
		</property_set>
	</update_node>

